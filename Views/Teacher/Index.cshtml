@model List<Teacher>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">
                Teacher List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i>  CREATE NEW Teacher
            </a>

        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th >
            Teacher ID
        </th>
        
        <th>
            Teacher Name
        </th>
        <th>
            Subject
        </th>
        <th>Action</th>

    </tr>
    </thead>
    <tbody>
        @foreach( var obj in Model)
        {
        <tr>
            <td>@obj.Id  </td>
            <td>@obj.Name</td>
            <td>@obj.Subject
                </td>
                <td>
                  <div class="w-75 btn-group" role="group">
                    <a asp-controller="Teacher" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-dark mx-2">
                        <i class="bi bi-pencil"> Edit</i>
                    </a>
                    <a asp-controller="Teacher" asp-action="Delete" asp-route-Id="@obj.Id"  class="btn btn-danger mx-2">
                        <i class="bi bi-trash3"> Delete</i>
                    </a>
                    
                  </div>
                </td>
        </tr>

        }
    </tbody>
        

</table>
</div>
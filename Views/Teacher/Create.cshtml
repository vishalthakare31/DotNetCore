@model Teacher


<form method="post">
    <div class="row pb-2 ">
        <h2 class="text-dark align-content-center">Create Teacher</h2>

    </div>
     
    <div class="mp-3 row p-1">
        <lable asp-for="Name" class="p-0">Teacher Name</lable>
        <input asp-for="Name" type="text" class="form-control" />
    </div>

    <div class="mp-3 row p-1">
        <lable asp-for="Subject" class="p-0">Subject</lable>
        <input asp-for="Subject" type="text" class="form-control" />
    </div>

    <div class="row">

        <div class="col-6 col-md-3 ">
            <button type="submit"class="btn btn-primary form-control ">Create</button>
        </div>
        <div class="col-6 col-m-3">
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-outline-secondary form-control">Back To list</a>
        </div>
    </div>
    
    


</form>

